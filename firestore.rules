rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Games collection - allow read access to all authenticated users
    // Allow users to create games in games/{gameType}/{difficulty}/{gameId}
    // Allow users to update stats field (for puzzle completions)
    // Service accounts (used by generate.py) bypass security rules
    match /games/{gameType}/{difficulty}/{gameId} {
      allow read: if request.auth != null || request.auth == null; // Allow service accounts
      allow create: if request.auth != null || request.auth == null; // Allow service accounts to create
      allow update: if request.auth != null || request.auth == null; // Allow service accounts to update
      allow delete: if false; // Only admins can delete (set this in Firebase Console)
    }
    
    // Legacy rule for other game paths (if any)
    match /games/{gameType}/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write (set this in Firebase Console)
    }
    
    // Usernames collection - all authenticated users can read (to check availability)
    // All authenticated users can write (to add their username)
    match /usernames/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // GameAddition collection - users can submit game ideas
    match /gameAddition/{ideaId} {
      allow read: if false; // Only admins can read (set this in Firebase Console)
      allow create: if request.auth != null; // All authenticated users can submit ideas
      allow update, delete: if false; // Only admins can update/delete
    }
  }
}

